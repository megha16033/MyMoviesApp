<ScrollView
    android:background="#ffffff"
    android:fillViewport="false"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.megha.moviesdata2.DeleteActivity">

    <TextView
        android:id="@+id/movie"
        android:layout_height="wrap_content"
        android:textColor="#25383C"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:textSize="25sp"
        android:text="Available Movies"
        android:textAlignment="center"
        android:gravity="center"/>

    <TextView
        android:id="@+id/movielist"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="#25383C"
        android:layout_width="match_parent"
        android:textSize="25sp"
        android:layout_below= "@+id/movie"/>

    <TextView
        android:id="@+id/label"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="#25383C"
        android:layout_below= "@+id/movielist"
        android:layout_width="match_parent"
        android:textSize="25sp" />

    <EditText
        android:hint="@string/MovieName"
        android:id="@+id/moviename"
        android:layout_below="@+id/label"
        android:textColor="#25383C"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" />

    <Button
        android:background="#ff55a7fa"
        android:id="@+id/delete"
        android:layout_below="@+id/moviename"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:onClick="onDeleteMovie"
        android:text="Delete" />

    <Button
        android:background="#fff5fa44"
        android:id="@+id/back"
        android:layout_below="@+id/delete"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:onClick="onBackMovie"
        android:text="Back" />


</RelativeLayout>
</ScrollView>